#!/usr/bin/env ruby

VERSION = "1.0.0"

command = ARGV[0]

@plugin_dir = File.join(Dir.home, 'code', 'discourse', 'plugins')

def info
  puts "dplugin v#{VERSION}"
  puts
  puts "commands:"
  puts   "add <plugin-name>"
  puts   "remove --all <plugin-name>"
  puts   "list"
end

def installed_plugins
  Dir.chdir(@plugin_dir)
  return `find . -maxdepth 1 -type l | cut -c 3-`.lines
end

def remove_all_plugins
  plugins = installed_plugins
  plugins.each do |plugin|
    command_remove(plugin)
  end
end

def command_list
  puts installed_plugins
end

def command_remove(plugin)
  Dir.chdir(@plugin_dir)
  `rm #{plugin}`
end

case command
when "add"
  plugin = ARGV[1]
  Dir.chdir(@plugin_dir)
  `ln -s #{File.join(Dir.home, 'code', plugin)}`
when "remove"
  plugin = ARGV[1]

  if plugin.nil?
    puts "Please specify a plugin or use the --all flag"
    return
  end

  if plugin == "--all"
    remove_all_plugins
  else
    command_remove(plugin)
  end
when "list"
  command_list
when "--version"
  puts "v#{VERSION}"
when "-v"
  puts "v#{VERSION}"
when "--help"
  info
when "-h"
else
  info
end
